rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - users can read/update their own document, admins can read all
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAdmin();
    }
    
    // Questions collection - only admins can manage
    match /questions/{questionId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
            // Tests collection - only admins can manage
            match /tests/{testId} {
              allow read: if isAuthenticated();
              allow create: if isAdmin();
              allow update: if isAdmin();
              allow delete: if isAdmin();
            }

            // TestSeries collection - only admins can manage
            match /testSeries/{testSeriesId} {
              allow read: if isAuthenticated();
              allow create: if isAdmin();
              allow update: if isAdmin();
              allow delete: if isAdmin();
            }

            // Enrollments collection - students can manage their own enrollments
            match /enrollments/{enrollmentId} {
              // Allow reading if the enrollment belongs to the user or user is admin
              allow get: if isAuthenticated() && (
                resource.data.userId == request.auth.uid || 
                isAdmin()
              );
              // Allow listing/querying - queries filter by userId so this is safe
              allow list: if isAuthenticated();
              // Allow creating enrollments for the authenticated user
              allow create: if isAuthenticated() && 
                request.resource.data.userId == request.auth.uid;
              // Allow updating if the enrollment belongs to the user or user is admin
              allow update: if isAuthenticated() && (
                resource.data.userId == request.auth.uid || 
                isAdmin()
              );
              // Allow deleting if the enrollment belongs to the user or user is admin
              allow delete: if isAuthenticated() && (
                resource.data.userId == request.auth.uid || 
                isAdmin()
              );
            }

            // TestResults collection - students can create and read their own results, admins can read all
            match /testResults/{resultId} {
              // Allow reading if the result belongs to the user or user is admin
              allow get: if isAuthenticated() && (
                resource.data.userId == request.auth.uid || 
                isAdmin()
              );
              // Allow listing/querying - queries filter by userId or testId so this is safe
              allow list: if isAuthenticated();
              // Allow creating test results for the authenticated user
              allow create: if isAuthenticated() && 
                request.resource.data.userId == request.auth.uid;
              // Don't allow updates - test results are final once submitted
              allow update: if false;
              // Allow admins to delete results for management purposes
              allow delete: if isAdmin();
            }

            // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}





